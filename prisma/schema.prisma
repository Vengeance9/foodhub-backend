generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Profile {
  id     String @id @default(uuid())
  userId String @unique
  user   User   @relation(fields: [userId], references: [id])

  name    String
  phone   String?
  address String?

  createdAt DateTime @default(now())
}

model Provider {
  id             String @id @default(uuid())
  userId         String @unique
  user           User   @relation(fields: [userId], references: [id])

  restaurantName String
  description    String?
  isOpen         Boolean @default(true)
  address        String
  phone          String
  website        String?
  cuisineType    String[]

  meals          ProviderMeal[]
  orders         Order[]

  createdAt      DateTime @default(now())
}

model Category {
  id   String @id @default(uuid())
  name String @unique

  meals Meal[]
}

model Meal {
  id          String  @id @default(uuid())
  provider    ProviderMeal[]
  categoryId  String?
  category    Category? @relation(fields: [categoryId], references: [id])
  name        String
  description String?
  reviews     Review[]
  createdAt   DateTime @default(now())
}

model ProviderMeal {
  id          String @id @default(uuid())
  providerId  String
  mealId      String
  provider    Provider @relation(fields: [providerId], references: [id])
  meal        Meal            @relation(fields: [mealId], references: [id])
  orderItems  OrderItem[]
  cartItems   CartItem[]
  isAvailable Boolean @default(true)
  price       Int
  @@unique([providerId, mealId])

}

enum OrderStatus {
  PENDING
  CONFIRMED
  PREPARING
  ON_THE_WAY
  DELIVERED
  CANCELLED
}

model Order {
  id                String @id @default(uuid())
  customerId        String
  providerId        String

  customer          User     @relation(fields: [customerId], references: [id])
  provider          Provider @relation(fields: [providerId], references: [id])

  status            OrderStatus @default(PENDING)
  totalAmount       Int
  deliveryAddress   String
  contact           String
  paymentMethod     String      @default("COD")

  items             OrderItem[]

  createdAt         DateTime @default(now())
}

model OrderItem {
  id              String @id @default(uuid())
  orderId         String
  ProvidermealId  String
  order           Order @relation(fields: [orderId], references: [id])
  Providermeal    ProviderMeal  @relation(fields: [ProvidermealId], references: [id])
  quantity        Int
  price           Int
}

model Cart {
  id         String   @id @default(uuid())
  userId     String   @unique
  providerId String
  items      CartItem[]
  updatedAt  DateTime @updatedAt
}

model CartItem {
  id             String @id @default(uuid())
  cartId         String
  providerMealId String
  quantity       Int

  cart           Cart          @relation(fields: [cartId], references: [id], onDelete: Cascade)
  providerMeal   ProviderMeal  @relation(fields: [providerMealId], references: [id])

  @@unique([cartId, providerMealId])
}


model Review {
  id     String @id @default(uuid())
  userId String
  mealId String

  user User @relation(fields: [userId], references: [id])
  meal Meal @relation(fields: [mealId], references: [id])

  rating  Int
  comment String?

  createdAt DateTime @default(now())
}



model User {
  id            String    @id
  name          String
  email         String
  emailVerified Boolean   @default(false)
  role          Role @default(CUSTOMER)
  isActive  Boolean  @default(true)
  profile   Profile?
  provider  Provider?
  orders    Order[]
  reviews   Review[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  sessions      Session[]
  accounts      Account[]

  @@unique([email])
  @@map("user")
}

enum Role {
  CUSTOMER
  PROVIDER
  ADMIN
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@index([userId])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@index([userId])
  @@map("account")
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([identifier])
  @@map("verification")
}


